{

  "manifest_version": 2,
  "name": "Awfulizer",
  "version": "1.0",

  "description": "Changes all of your CSS 6 times a second.",

  "icons": {
    "48": "icons/awfulizer.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_title": "Awfulizer"
  },

  "permissions": [
    "activeTab"
  ]
}
